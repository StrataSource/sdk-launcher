{
  "type": "steam",
  "appid": "1802710",
  "sections": [
    {
      "name": "Game",
      "entries": [
        {
          "name": "Momentum Mod - Dev Mode",
          "type": "command",
          "action": "${ROOT}/bin/${PLATFORM}/chaos",
          "arguments": ["-game", "momentum", "-dev", "-console"],
          "icon_override": "${GAME_ICON}"
        },
        {
          "name": "Momentum Mod - Dev && Tools Mode",
          "type": "command",
          "action": "${ROOT}/bin/${PLATFORM}/chaos",
          "arguments": ["-game", "momentum", "-dev", "-console", "-tools"],
          "icon_override": "${GAME_ICON}"
        }
      ]
    },
    {
      "name": "Tools",
      "entries": [
        {
          "name": "Hammer Editor",
          "type": "command",
          "action": "${ROOT}/bin/win64/hammer",
          "arguments": ["-game", "momentum"],
          "os": "windows"
        },
        {
          "name": "Model Viewer",
          "type": "command",
          "action": "${ROOT}/bin/win64/hlmv",
          "arguments": ["-game", "momentum"],
          "os": "windows"
        },
        {
          "name": "Face Poser",
          "type": "command",
          "action": "${ROOT}/bin/win64/hlfaceposer",
          "arguments": ["-game", "momentum"],
          "os": "windows"
        }
      ]
    },
    {
      "name": "Links",
      "entries": [
        {
          "name": "Momentum Mod Wiki",
          "type": "link",
          "action": "https://wiki.stratasource.org/momentum",
          "icon_override": "${GAME_ICON}"
        },
        {
          "name": "Momentum Mod Issue Tracker",
          "type": "link",
          "action": "https://github.com/momentum-mod/game/issues",
          "icon_override": "${GAME_ICON}"
        },
        {
          "name": "Strata Source Issue Tracker",
          "type": "link",
          "action": "https://github.com/StrataSource/Engine/issues",
          "icon_override": "${STRATA_ICON}"
        }
      ]
    }
  ]
}
